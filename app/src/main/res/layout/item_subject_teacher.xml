<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="16dp"
   >

    <RelativeLayout
        android:id="@+id/rlt_subject_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/teal_200"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_subject_teacher"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/pic6"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_subject_teacher">
            <TextView
                android:id="@+id/tv_subject_teacher"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffff"
                android:layout_toEndOf="@+id/img_subject_teacher"
                android:text="Môn Toán" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_blue_corner_border_16"
            android:layout_toLeftOf="@+id/img_delete"
            android:layout_marginTop="20dp"
            app:srcCompat="@android:drawable/ic_input_add"
            />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_blue_corner_border_16"
            app:srcCompat="@android:drawable/ic_delete"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>