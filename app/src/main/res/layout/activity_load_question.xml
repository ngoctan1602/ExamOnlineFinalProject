<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/llt_timmer"
        android:background="#00BCD4"
       >


        <ImageView
            android:id="@+id/imgtimmer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_timer"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_timmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgtimmer"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:textColor="#ffff"

            android:text="imgtimmer" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imgtimmer"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:text="Thời gian còn lại" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"

            android:text="Nộp bài" />
    </RelativeLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llt_timmer"
        android:layout_above="@+id/linear_bottom">

    </androidx.viewpager2.widget.ViewPager2>
    <LinearLayout
        android:id="@+id/linear_bottom"
        android:background="#00BCD4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_back"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Trước" />
        <TextView
            android:id="@+id/txt_curent"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <TextView
            android:id="@+id/textView7"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <TextView
            android:id="@+id/txt_sumquestion"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20" />
        <TextView
            android:id="@+id/txt_next"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Sau" />

        <Button
            android:id="@+id/btn_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="sheet" />

    </LinearLayout>



</RelativeLayout>