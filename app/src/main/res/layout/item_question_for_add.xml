<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
   >

    <RelativeLayout
        android:id="@+id/rlt_question_for_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background">

        <ImageView
            android:id="@+id/img_question_for_add"
            android:layout_width="86dp"
            android:layout_height="86dp"
            tools:srcCompat="@tools:sample/avatars" />
        <TextView
            android:id="@+id/tv_id_question_for_add"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/img_question_for_add"
            android:text="Id:1" />

        <TextView
            android:id="@+id/tv_name_question_for_add"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/img_question_for_add"
            android:layout_below="@+id/tv_id_question_for_add"
            android:text="Chuyển động thẳng đều" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>